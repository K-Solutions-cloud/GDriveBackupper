[Unit]
Description=Daily BTRFS Backup to Google Drive at 3 AM

[Timer]
# Run daily at 3:00 AM
OnCalendar=*-*-* 03:00:00
# If system was off at 3 AM, run backup when it comes online
Persistent=true
# Add random delay up to 15 minutes to avoid exact timing
RandomizedDelaySec=900

[Install]
WantedBy=timers.target
