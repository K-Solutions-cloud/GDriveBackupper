# Backup Configuration
# Source: GDriveBackupper project

# Google Drive remote name (as configured in rclone)
GDRIVE_REMOTE="K-Solutions:"

# Encrypted remote for BTRFS backups (configured via setup-rclone-crypt)
GDRIVE_REMOTE_ENCRYPTED="K-Solutions-Crypt:"

# Remote paths for backups
BTRFS_BACKUP_PATH="Backups/Linux/cachyos-snapshots"
BTRFS_BACKUP_PATH_ENCRYPTED="Backups/Linux/cachyos-snapshots-encrypted"
PROJECT_BACKUP_PATH="Backups/Linux/projects"

# Local directories to backup (space-separated for multiple directories)
PROJECTS_DIR="/mnt/sandisk_2tb/Projects"
PROJECTS_DIR_SECONDARY="/home/aaron/Projects"

# State and log directory
LOG_DIR="${HOME}/.local/state/btrfs-backup"

# Snapper configuration name
SNAPPER_CONFIG="root"

# Maximum log file size before rotation (10MB)
MAX_LOG_SIZE=10485760

# Restic Configuration
# Repository location using rclone backend
RESTIC_REPOSITORY="rclone:K-Solutions:Backups/Linux/projects"

# Password file location (stored outside project for security)
RESTIC_PASSWORD_FILE="${HOME}/.config/restic/projects-password"

# Compression mode (auto|off|max) - requires repository version 2
# max: Best compression ratio, slower but saves storage space
RESTIC_COMPRESSION="max"

# Retention policy (keep last N snapshots)
RESTIC_KEEP_LAST=10
RESTIC_KEEP_DAILY=7
RESTIC_KEEP_WEEKLY=4
RESTIC_KEEP_MONTHLY=6
